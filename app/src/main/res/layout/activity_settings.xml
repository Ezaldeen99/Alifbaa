<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_colored"
        tools:context="com.example.android.alifbaa.SettingsActivity">
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/float_button_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/homebutton" />
        <Switch
            android:id="@+id/random_order"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/float_button_home"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/random_order"
            android:textSize="20sp" />
        <Switch
            android:id="@+id/Lowercase_letters"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/random_order"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/lowercase_letters"
            android:textSize="20sp" />
        <Switch
            android:id="@+id/enable_swiping"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Lowercase_letters"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:checked="true"
            android:text="@string/enable_swiping"
            android:textSize="20sp" />
        <Switch
            android:id="@+id/Show_hints"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/enable_swiping"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:checked="false"
            android:text="@string/show_hints"
            android:textSize="20sp" />
        <Switch
            android:id="@+id/teacher_mode"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Show_hints"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:checked="false"
            android:text="@string/teacher_mode"
            android:textSize="20sp"
            android:tooltipText="select which letters to trace" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/teacher_mode"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:src="@drawable/ic_volume_mute_24dp" />
            <SeekBar
                android:id="@+id/id_seek_bar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_weight="8"
                android:max="20" />
            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:src="@drawable/ic_volume_up_black_24dp" />
        </LinearLayout>
        <ImageView
            android:id="@+id/email_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_email_24dp" />
        <ImageView
            android:id="@+id/facebook_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="8dp"
            android:layout_toLeftOf="@id/email_icon"
            android:scaleType="centerCrop"
            android:src="@drawable/facebookicon" />
        <ImageView
            android:id="@+id/twitter_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="8dp"
            android:layout_toLeftOf="@id/facebook_icon"
            android:src="@drawable/twittericon" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="16dp"
            android:layout_toLeftOf="@id/twitter_icon"
            android:text="@string/connect_with_us"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="14sp" />
    </RelativeLayout>
