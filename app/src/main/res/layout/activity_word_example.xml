<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:background="#fefefe">

    <TextView
        android:id="@+id/letter_sound_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:text="alif"
        android:textStyle="bold"
        android:textColor="#284c6a"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/letter_animal_img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:src="@drawable/animal_a" />

    <ImageView
        android:id="@+id/letter_animal_spelling_img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/spelling_a" />

    <TextView
        android:id="@+id/animal_in_english"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:text="rabbit"
        android:textStyle="bold"
        android:textColor="#284c6a"
        android:textSize="24sp"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/tick_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:gravity="left"
        android:src="@drawable/tickbutton" />
</LinearLayout>