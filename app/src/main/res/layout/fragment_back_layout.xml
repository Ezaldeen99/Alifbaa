<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/filp_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/letter_sound_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="alif"
        android:textColor="@color/words_color"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/animal_img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/letter_animal_spelling_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/spelling_a" />

    <TextView
        android:id="@+id/animal_in_english"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="rabbit"
        android:textColor="@color/words_color"
        android:textSize="24sp"
        android:textStyle="bold" />
</LinearLayout>